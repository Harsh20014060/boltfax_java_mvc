<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    tools:context=".ForgottenPassword">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#a6ded7"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/secondary_color_gradient"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:background="@drawable/secondary_color_gradient"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Forgotten Password"
                            android:textColor="@color/black"
                            android:textSize="26dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/forget_contactnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/four_side_rounded_corner"
                            android:drawableStart="@drawable/ic_baseline_call_24"
                            android:drawablePadding="10dp"
                            android:elevation="10dp"
                            android:ems="10"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:padding="10dp"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/forget_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/four_side_rounded_corner"
                            android:drawableLeft="@drawable/inbox"
                            android:drawablePadding="10dp"
                            android:elevation="10dp"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="OTP"
                            android:inputType="numberPassword"
                            android:padding="10dp"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/forget_otptimerAndError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/blue"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/forget_getotp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Get OTP"
                                android:textColor="@color/blue"
                                android:textSize="18dp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/forget_newpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/four_side_rounded_corner"
                            android:drawableLeft="@drawable/lock"
                            android:drawablePadding="10dp"
                            android:elevation="10dp"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="New Password"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/forget_repassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/four_side_rounded_corner"
                            android:drawableLeft="@drawable/lock"
                            android:drawablePadding="10dp"
                            android:elevation="10dp"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/forget_VerifyChange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/four_side_rounded_corner"
                            android:enabled="false"
                            android:text="Verify otp"
                            android:textSize="20dp" />


                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/forgot_BackToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:text="Back to Login"
                android:textColor="@color/sky_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgot_createnewaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Create A New Account"
                android:textColor="@color/sky_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>