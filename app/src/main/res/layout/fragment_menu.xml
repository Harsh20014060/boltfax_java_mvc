<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="-36dp"
                android:layout_marginBottom="5dp"
                android:elevation="20dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/secondary_color_gradient"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="#00000000"
                            android:src="@drawable/account_circle" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/century_bold_italic"
                            android:text="Hello User !!"
                            android:textColor="@color/navyblue"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/menu_adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-1862035894487465/6522269689" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="5dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/choosenlanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/language" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Choose Language"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentdetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/payment_details" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Payment Details"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mywallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/rupee" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="My Wallet"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mywhishlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/favorite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="My Wishlist"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/myorders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/shopping_bag" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="My Orders"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mychashbbackpoint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/emoji" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Cashback Points"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/privacyAndPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/privacy" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Privacy Policy"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/termsandcondition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/privacy" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Terms &amp; Conditions"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/helpAndSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/contact_support" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Help &amp; Support"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feedbackAndSuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/feedback" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Feedback &amp; Suggestions"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ourStory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/secondary_color_gradient"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#00000000"
                            android:src="@drawable/about_us" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:drawableEnd="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            android:text="Developer Profile"
                            android:textColor="@color/navyblue"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="5dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/secondary_color_gradient"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="#00000000"
                        android:src="@drawable/settings" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="Settings"
                        android:textColor="@color/navyblue"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="5dp"
                android:elevation="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/signOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/secondary_color_gradient"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="#00000000"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:drawableEnd="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="Sign Out"
                        android:textColor="@color/navyblue"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>